{
  "name": "@root/nonebot",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "test",
    "packages/*",
    "plugins/*"
  ],
  "packageManager": "yarn@1.22.19",
  "license": "MIT",
  "scripts": {
    "setup": "node -r esbuild-register scripts/setup",
    "build": "yakumo build",
    "nbp:build": "yakumo nbp",
    "nbp:pack": "yakumo nbp-pack",
    "docs:dev": "vitepress dev docs --open",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "start": "koishi start test",
    "dev": "cross-env NODE_ENV=development koishi start test -r esbuild-register -r yml-register",
    "lint": "eslint packages plugins --ext=ts --cache",
    "test": "yakumo mocha -r esbuild-register -r yml-register",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@koishijs/eslint-config": "^1.0.1",
    "@koishijs/vitepress": "^1.6.5",
    "@koishijs/client": "^5.5.6",
    "@koishijs/plugin-console": "^5.5.6",
    "@koishijs/plugin-help": "^2.2.2",
    "@koishijs/plugin-hmr": "^1.1.1",
    "@koishijs/plugin-sandbox": "^2.7.3",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.15.11",
    "@types/tar": "^6.1.4",
    "@types/unbzip2-stream": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "del": "^6.1.1",
    "esbuild": "^0.14.54",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.37.0",
    "eslint-plugin-mocha": "^10.1.0",
    "jest-mock": "^28.1.3",
    "koishi": "^4.12.2",
    "mocha": "^9.2.2",
    "sass": "^1.60.0",
    "shx": "^0.3.4",
    "tar": "^6.1.13",
    "typescript": "^4.9.5",
    "unbzip2-stream": "^1.4.3",
    "vitepress": "1.0.0-alpha.26",
    "yakumo": "^0.3.10",
    "yakumo-esbuild": "^0.3.22",
    "yakumo-esbuild-yaml": "^0.3.1",
    "yakumo-mocha": "^0.3.1",
    "yakumo-publish": "^0.3.4",
    "yakumo-publish-sync": "^0.3.2",
    "yakumo-tsc": "^0.3.8",
    "yakumo-upgrade": "^0.3.3",
    "yakumo-version": "^0.3.4",
    "yml-register": "^1.1.0"
  }
}
